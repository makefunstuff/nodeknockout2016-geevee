extends ../layouts/default

block content
  .row
    .col-md-12
      h1.text-center All active giveways
  .row
    .col-md-12
      #items_container.row
        each giveaway in giveaways
          .masonry-item
            .panel.panel-default
              .panel-heading
                h4= giveaway.name
                  span.badge= Math.floor(Math.random() + 1 * 10)
              .panel-body
                img.img-responsive.img-rounded(src="#{giveaway.image}")
              .panel-footer
                if user
                  a.btn.btn-primary Details
                else
                  | Log in to see the details
